                                                const today = new Date();
                                                today.setHours(0, 0, 0, 0);
                                                const eventDateOnly = new Date(eventDate);
                                                eventDateOnly.setHours(0, 0, 0, 0);
                                                
                                                let status = 'past';
                                                let statusText = 'Past';
                                                if (eventDateOnly > today) {
                                                    status = 'upcoming';
                                                    statusText = 'Upcoming';
                                                } else if (eventDateOnly.getTime() === today.getTime()) {
                                                    status = 'today';
                                                    statusText = 'Today';
                                                }
                                            %>
